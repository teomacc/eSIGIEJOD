{
  "name": "esigieiod-backend",
  "version": "1.0.0",
  "description": "Backend para sistema de gest√£o financeira multi-igreja eSIGIEJOD",
  "author": "eSIGIEJOD Team",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm:migration:create": "typeorm migration:create",
    "typeorm:migration:run": "typeorm-ts-node-commonjs -d ./data-source.ts migration:run",
    "typeorm:migration:revert": "typeorm-ts-node-commonjs -d ./data-source.ts migration:revert",
    "db:migrate": "typeorm-ts-node-commonjs -d ./data-source.ts migration:run",
    "db:seed": "ts-node src/database/seeds/index.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.10",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^11.1.11",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/typeorm": "^11.0.0",
    "@types/express": "^4.17.21",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^10.0.3",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.8",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.6",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "chokidar": "^4.0.3",
    "eslint": "^8.55.0",
    "jest": "^26.5.3",
    "prettier": "^3.1.1",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.5.1",
    "ts-node": "^1.7.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
